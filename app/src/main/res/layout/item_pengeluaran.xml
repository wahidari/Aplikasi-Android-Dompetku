<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/list_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/minus_circular_32" />

            <TextView
                android:id="@+id/deskrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/jumlah"
                android:layout_toRightOf="@+id/list_avatar"
                android:singleLine="true"
                android:text="Nama"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/namakategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deskrip"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tanggal"
                android:layout_toRightOf="@+id/list_avatar"
                android:singleLine="true"
                android:text="Kategori"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/medium_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="false"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:text="1000"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/jumlah"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:text="19/06/2018"
                android:textSize="13sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>